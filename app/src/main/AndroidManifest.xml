<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bpr_it.app.bpr_it">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity"
                  android:label="@string/menu_title">
        </activity>
        <activity android:name=".TaskListActivity"
                  android:label="@string/tasklist_title">
        </activity>
        <activity android:name=".TaskDetailsActivity"
                  android:label="@string/taskdetails_title">
        </activity>
        <activity android:name=".ComponentListActivity"
                  android:label="@string/componentlist_title">
        </activity>
        <activity android:name=".ComponentDetailsActivity"
                  android:label="@string/componentdetails_title">
        </activity>
    </application>

</manifest>